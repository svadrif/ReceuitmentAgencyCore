@using Microsoft.Extensions.Localization

@model RegisterViewModel

@inject IStringLocalizer T

@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>RecruitmentAgencyCore - @T["Register"]</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/LoginAssets/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginAssets/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginAssets/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginAssets/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginAssets/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginAssets/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginAssets/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginAssets/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginAssets/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginAssets/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/LoginAssets/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('../../LoginAssets/images/bg-01.jpg');">
            <div class="wrap-login100">
                <form class="login100-form validate-form" method="post">
                    <span class="login100-form-logo">
                        <i class="zmdi zmdi-landscape"></i>
                    </span>

                    <span class="login100-form-title p-b-34 p-t-27">
                        @T["Register"]
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="@T["EnterEmail"]">
                        <input class="input100" type="email" asp-for="Email" placeholder="@T["EnterEmail"]...">
                        <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        <span asp-validation-for="Email" class="text-warning"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="@T["EnterPhone"]">
                        <input class="input100" type="tel" asp-for="PhoneNumber" placeholder="@T["EnterPhone"]...">
                        <span class="focus-input100" data-placeholder="&#xf158;"></span>
                        <span asp-validation-for="PhoneNumber" class="text-warning"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="@T["EnterPassword"]">
                        <input class="input100" type="password" asp-for="Password" placeholder="@T["EnterPassword"]...">
                        <span class="focus-input100" data-placeholder="&#xf191;"></span>
                        <span asp-validation-for="Password" class="text-warning"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="@T["ConfirmPassword"]">
                        <input class="input100" type="password" asp-for="PasswordConfirm" placeholder="@T["ConfirmPassword"]">
                        <span class="focus-input100" data-placeholder="&#xf190;"></span>
                        <span asp-validation-for="PasswordConfirm" class="text-warning"></span>
                    </div>

                    <div class="col-sm-12 mb-4">
                        <div class="toggle">
                            <input type="radio" asp-for="RoleId" value="2" id="Employer">
                            <label for="Employer">@T["Employer"]</label>

                            <input type="radio" asp-for="RoleId" value="3" id="JobSeeker" checked>
                            <label for="JobSeeker">@T["JobSeeker"]</label>

                            <div id="flap"><span class="content">productive</span></div>
                        </div>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            @T["Register"]
                        </button>
                    </div>

                    <div class="text-center p-t-90">
                        <a href="/Home/Index" class="txt1">
                            @T["Back"]
                        </a>
                        <i class="fa fa-sad-cry"></i>
                        <a class="txt1 ml-3" href="/Account/Login">
                            @T["Already"]
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/LoginAssets/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginAssets/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginAssets/vendor/bootstrap/js/popper.js"></script>
    <script src="~/LoginAssets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginAssets/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginAssets/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/LoginAssets/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginAssets/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginAssets/js/main.js"></script>
    <script src="~/RegisterAssets/jquery.maskedinput.min.js"></script>

</body>
</html>

<script>
    $("#PhoneNumber").mask("(AA) AAA-AA-AA");
</script>